<template>
  <list class="container">
    <!-- 注意事项: 不能使用 index 作为 key 的唯一标识 -->
    <cell v-for="(item, index) in dataList" :key="item.id" class="item" :loadmoreoffset="20">
			
			<view class="area">
				<text class="title">医生:</text>
				<text class="value">{{item.userName}}</text>
			</view>
			
			<view class="area">
				<text class="title">拟扣款:</text>
				<text class="value">{{item.carpayTotalAmount}}元</text>
			</view>
			
			<view class="area">
				<text class="title">违规记录:</text>
				<text class="value">{{item.userVioSize}}条</text>
			</view>
      
    </cell>
  </list>
</template>

<script>
	import { deptCollectDetail } from "@/fetch/api/home/index.js"
  export default {
    data () {
      return {
        dataList: []
      }
    },
		onLoad(){
			this.userInfo = uni.getStorageSync('userInfo');
			this.hosId = this.userInfo.hosId;
			this.deptCollectDetail();
		},
		methods:{
			/**
			 * 获取详情
			 */
			deptCollectDetail(){
				let params ={
					hosId:this.hosId,
					userId:this.userInfo.userId,
					deptNm:this.userInfo.deptNm
				}
				deptCollectDetail(params).then(res=>{
					this.dataList = res || [];
				})
			}
		}
  }
</script>

